{
  "message": "{{ unique }}",
  "recurrence": {
    "period": 1,
    "type": "weeks",
    "until_date": {{ timestamp("now + 21d") }},
    "week_days": ["Mon", "Tue", "Wed", "Thu", "Fri"]
  },
  "scope": ["*"],
  "start": {{ timestamp("now") }},
  "end": {{ timestamp("now + 1h") }},
  "timezone": "Etc/UTC",
  "mute_first_recovery_notification": true,
  "monitor_tags": [
    "tag0"
  ],
  "notify_end_states": [
    "alert"
  ],
  "notify_end_types": [
    "canceled"
  ]
}
